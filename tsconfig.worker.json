{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist/worker",
    "rootDir": "src/worker",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/worker/**/*"],
  "exclude": ["node_modules", "dist"]
} 